<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="DbInvoiceItem"
            type="com.enjo.hoefsmidenjo.database.invoiceitem.DbInvoiceItem" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <View
            android:id="@+id/itemcard"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:background="@color/navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemname"
            android:layout_width="162dp"
            android:layout_height="58dp"
            android:gravity="center_vertical"
            android:maxWidth="150dp"
            android:text="@string/name"
            android:textColor="@color/textGold"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/itemcard"
            app:layout_constraintEnd_toEndOf="@+id/itemcard"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="@+id/itemcard"
            app:layout_constraintTop_toTopOf="@+id/itemcard"
            app:layout_constraintVertical_bias="0.509" />

        <TextView
            android:id="@+id/itemprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:text="@string/_5_00"
            android:textColor="@color/textGold"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/itemcard"
            app:layout_constraintEnd_toEndOf="@+id/itemcard"
            app:layout_constraintHorizontal_bias="0.68"
            app:layout_constraintStart_toEndOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@+id/itemcard"
            app:layout_constraintVertical_bias="0.509" />

        <View
            android:id="@+id/view3"
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:layout_marginTop="9dp"
            android:background="@color/textGold"
            app:layout_constraintEnd_toEndOf="@+id/itemcard"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="@+id/itemcard"
            app:layout_constraintTop_toTopOf="@+id/itemcard" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>