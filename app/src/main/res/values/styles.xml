<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="category">
        <item name="android:textColor">@color/textGold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="menuItem">
        <item name="android:textColor">@color/textGold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="buttonText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="homebuttons">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fillColor">@color/black</item>
    </style>

    <style name="datepicker" >
        <item name="colorAccent">@color/navigation</item>
        <item name="android:calendarTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

    </style>

    <style name="profilecardtext">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="filterClient">
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="deleteDialog">
        <item name="android:background">#80343434</item>
        
        <item name="android:textColor">@color/textGold</item>
        <item name="android:textColorPrimary">@color/textGold</item>
        <item name="android:textColorSecondary">@color/textGold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="inputtext">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
    <style name="clientlabel">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textGold</item>
    </style>

    <style name="invoicecard">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textGold</item>
    </style>
    <style name="invoiceheader">
        <item name="android:gravity">center</item>
        <item name="android:height">90dp</item>
        <item name="android:textColor">@color/textGold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>
</resources>